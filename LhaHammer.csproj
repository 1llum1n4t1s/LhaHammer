<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net10.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <ApplicationIcon>res\LhaForge.ico</ApplicationIcon>
    <AssemblyName>LhaHammer</AssemblyName>
    <RootNamespace>LhaHammer</RootNamespace>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <Version>2.0.0</Version>
    <Authors>ゆろち</Authors>
    <Company>ゆろち</Company>
    <Product>LhaHammer</Product>
    <Description>Multi-format archive manager for Windows</Description>
    <Copyright>Copyright © ゆろち 2025</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="SharpCompress" Version="0.38.0" />
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.3.2" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="9.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="res\*.ico" />
    <Resource Include="res\*.png" />
  </ItemGroup>

</Project>
