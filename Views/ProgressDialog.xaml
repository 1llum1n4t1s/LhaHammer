<Window x:Class="LhaHammer.Views.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}"
        Height="200"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="{Binding StatusMessage}"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <TextBlock Grid.Row="1"
                   Text="{Binding CurrentFile}"
                   TextTrimming="CharacterEllipsis"
                   Margin="0,0,0,10"/>

        <ProgressBar Grid.Row="2"
                    Value="{Binding PercentComplete}"
                    Height="25"
                    Minimum="0"
                    Maximum="100"
                    Margin="0,0,0,10"/>

        <TextBlock Grid.Row="3"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10">
            <Run Text="{Binding PercentComplete, StringFormat={}{0:F1}}"/>
            <Run Text="%"/>
        </TextBlock>

        <StackPanel Grid.Row="4"
                   Orientation="Horizontal"
                   HorizontalAlignment="Center">
            <TextBlock>
                <Run Text="Files: "/>
                <Run Text="{Binding ProcessedFiles}"/>
                <Run Text="/"/>
                <Run Text="{Binding TotalFiles}"/>
            </TextBlock>
            <TextBlock Margin="20,0,0,0">
                <Run Text="Size: "/>
                <Run Text="{Binding ProcessedBytes, StringFormat={}{0:N0}}"/>
                <Run Text="/"/>
                <Run Text="{Binding TotalBytes, StringFormat={}{0:N0}}"/>
                <Run Text=" bytes"/>
            </TextBlock>
        </StackPanel>

        <Button Grid.Row="5"
                Content="Cancel"
                Command="{Binding CancelCommand}"
                IsEnabled="{Binding CanCancel}"
                Width="100"
                Height="30"
                Margin="0,10,0,0"/>
    </Grid>
</Window>
